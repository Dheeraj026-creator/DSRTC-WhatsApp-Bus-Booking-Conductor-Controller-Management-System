<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Repeat Bus ‚Äì <%= bus.busNumber %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .card { border-radius: 15px; }
    h1 { font-weight: 600; color: #0d6efd; }
  </style>
</head>
<body>
  <div class="container mt-5 mb-5">
    <h1 class="text-center mb-4">üîÅ Repeat Bus ‚Äì <%= bus.busNumber %></h1>

    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/admin/repeat/<%= bus._id %>" method="POST" class="card shadow-sm p-4 bg-white">

          <p><strong>Driver:</strong> <%= bus.driverName %></p>

          <!-- Departure City -->
          <div class="mb-3">
            <label class="form-label">Departure City</label>
            <select name="departureCity" id="departureCity" class="form-select" required>
              <option value="Bengaluru" <%= bus.departureCity === 'Bengaluru' ? 'selected' : '' %>>Bengaluru</option>
              <option value="Mysuru" <%= bus.departureCity === 'Mysuru' ? 'selected' : '' %>>Mysuru</option>
            </select>
          </div>

          <!-- Arrival City (auto updated) -->
          <div class="mb-3">
            <label class="form-label">Arrival City</label>
            <input type="text" name="arrivalCity" id="arrivalCity" class="form-control" value="<%= bus.arrivalCity %>" readonly required>
          </div>

          <hr>

          <!-- Departure Time -->
          <div class="mb-3">
            <label class="form-label">New Departure Time</label>
            <input type="time" name="departureTime" class="form-control" value="<%= bus.departureTime %>" required>
          </div>

          <!-- Arrival Time -->
          <div class="mb-3">
            <label class="form-label">New Arrival Time</label>
            <input type="time" name="arrivalTime" class="form-control" value="<%= bus.arrivalTime %>" required>
          </div>

          <!-- Submit -->
          <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary w-100">Repeat Bus</button>
          </div>

          <div class="text-center mt-3">
            <a href="/" class="btn btn-outline-secondary w-100">‚¨ÖÔ∏è Go Back</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- ‚úÖ Script for auto-updating Arrival City -->
  <script>
    const departureSelect = document.getElementById("departureCity");
    const arrivalInput = document.getElementById("arrivalCity");

    function updateArrivalCity() {
      if (departureSelect.value === "Bengaluru") {
        arrivalInput.value = "Mysuru";
      } else if (departureSelect.value === "Mysuru") {
        arrivalInput.value = "Bengaluru";
      }
    }

    // Run once on page load
    updateArrivalCity();

    // Update when selection changes
    departureSelect.addEventListener("change", updateArrivalCity);
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
